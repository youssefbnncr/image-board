html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Admin Panel
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css")
    body
    h2 Users
    table(class="table table-striped p-8")
            thead
                tr
                    th(scope="col") ID
                    th(scope="col") Username
                    th(scope="col") Created at
                    th(scope="col") Role
            tbody
                each user in users
                    tr
                        th(scope="row")= user.id
                        td= user.username
                        td= user.created_at
                        td
                            select(name="role", class="form-select")
                                option(value="0" selected=user.role===0) User
                                option(value="1" selected=user.role===1) Moderator
                                option(value="2" selected=user.role===2) Admin
    button(type="submit", class="btn btn-success") Save


h2 Boards
table(class="table table-striped")
        thead
            tr
                th(scope="col") Category ID
                th(scope="col") Category Name
                th(scope="col") Board ID
                th(scope="col") Board Name
        tbody
            tr
                th(scope="row") 1
                td Mark
                td Otto
                td @mdo
            tr
                th(scope="row") 2
                td Jacob
                td Thornton
                td @fat
            tr
                th(scope="row") 3
                td John
                td Doe
                td @social
